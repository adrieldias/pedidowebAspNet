        <dt>
            @Html.DisplayName("Código")
        </dt>
        
        <dd>
            @Html.DisplayFor(model => model.ProdutoID)
        </dd>

        @if(Model.CodProduto > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.CodProduto)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CodProduto)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PercDescontoMaximo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PercDescontoMaximo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnidadeMedida)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnidadeMedida)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PrecoVarejo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecoVarejo)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Situacao)
        </dt>             

        <dd>
            @Html.DisplayFor(model => model.Situacao)
        </dd>
        
    </dl>
    <p>
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
    </p>
</div>
