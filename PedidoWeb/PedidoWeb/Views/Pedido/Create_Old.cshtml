@model PedidoWeb.Models.PedidoCreate

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="principal1coluna">
        <h2>Novo Pedido</h2>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.CadastroID, "Cliente")
            @Html.DropDownList("CadastroID", null,string.Empty, new {@class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pedido.CadastroID)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.PrazoVencimentoID, "Forma de Pagamento")
            @Html.DropDownList("PrazoVencimentoID", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pedido.PrazoVencimentoID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.VendedorID, "Vendedor")
            @Html.DropDownList("VendedorID", null, new {@disabled=true, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pedido.VendedorID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.TransportadorID, "Transportador")
            @Html.DropDownList("TransportadorID", null, string.Empty, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pedido.TransportadorID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.TipoFrete)
            @Html.DropDownListFor(model => model.Pedido.TipoFrete,
                new List<SelectListItem>() { new SelectListItem(){Text="CIF", Value="CIF"},
                    new SelectListItem(){Text="FOB", Value="FOB" }}, string.Empty, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pedido.TipoFrete)
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.OrdemCompra)
            @Html.TextBoxFor(model => model.Pedido.OrdemCompra, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pedido.OrdemCompra)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pedido.Observacao)
            @Html.TextAreaFor(model => model.Pedido.Observacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Pedido.Observacao)
        </div>        

        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>        
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#VendedorID").prop("disabled", true);        
    </script>
}