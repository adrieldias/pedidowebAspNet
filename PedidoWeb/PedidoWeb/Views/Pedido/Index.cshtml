@using PagedList.Mvc;
@model PagedList.IPagedList<PedidoWeb.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<!-- Elementos da página devem estar dentro de um container -->
<!-- Barra lateral esquerda -->
<aside role="complementary" class="col-md-2">
    <ul class="nav nav-pills nav-stacked">
        <li role="presentation" class="menulateral">
            <a href="Home">
                <span class="glyphicon glyphicon-star-empty" aria-hidden="false"></span>
                Home
            </a>
        </li>
        <li role="presentation" class="menulateral">
            <a href="Home">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                Profile
            </a>
        </li>
        <li role="presentation" class="menulateral">
            <a href="Home">
                <span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span>
                Messages
            </a>
        </li>
    </ul>
    <br />
</aside>
<div class="col-md-10" style="padding-left: 0px; padding-right: 0px">
    @using (Html.BeginForm("Index", "Pedido", FormMethod.Get))
    {
        <div class="input-group" style="padding-left: 0px; padding-right: 0px">
            @Html.TextBox("Search", null, new
            {
                onchange = "$(this.form).submit();",
                placeholder = "Pesquisar por Cliente ou nº do Pedido",
                @class = "form-control"
            })
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                    Pesquisar
                </button>
            </span>
        </div>

    }

    <br />
</div>


<div role="main" class="col-md-10 principal">

    <h2>Pedidos</h2>
    <br>
    <p>
        @Html.ActionLink("Novo Pedido", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div>
        <p style="text-align: right">
            Legendas:&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Informações&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Excluir
        </p>

    </div>
    <table class="table table-responsive">
        <tr class="cabecalho-tabela">
            <th>
                @Html.DisplayNameFor(model => model[0].Cadastro.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PrazoVencimento.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Transportador.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Vendedor.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Observacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].TipoFrete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].OrdemCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DataEmissao)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cadastro.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrazoVencimento.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Transportador.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendedor.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoFrete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrdemCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataEmissao)
                </td>
                <td>
                    @Html.ActionLink(" ", "Details", new { id = item.PedidoID }, new { @class = "btn btn-info glyphicon glyphicon-info-sign" })
                    @Html.ActionLink(" ", "Edit", new { id = item.PedidoID }, new { @class = "btn btn-primary glyphicon glyphicon-pencil" })
                    @Html.ActionLink(" ", "Delete", new { id = item.PedidoID }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })
                </td>
            </tr>
        }

    </table>

    <!--</div>-->
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>



       

        
